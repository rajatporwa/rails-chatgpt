<body>
  <div style="text-align: center; margin-top: 20px;">
    <h1>Welcome to OpenAI Search</h1>

    <div id="result"></div>

    <script>
      $(document).ready(function() {
        $('#searchButton').on('click', function() {
          var inputText = $('#searchInput').val();
          var taskType = $('#taskType').val();

          $.ajax({
            url: '/search',
            method: 'POST',
            data: {
              input_text: taskType === 'image_caption' ? '' : inputText,
              image_url: taskType === 'image_caption' ? inputText : '',
              task_type: taskType
            },
            success: function(response) {
              var resultText = response.result || 'No result received from the server';
              $('#result').text('Result: ' + response.result);
            },
            error: function(error) {
              console.error('Error:', error);
            }
          });
        });
      });
    </script>

    <label for="searchInput">Enter search input:</label>
    <input type="text" id="searchInput">
    
    <label for="taskType">Select task type:</label>
    <select id="taskType">
      <option value="chat">Chat</option>
      <option value="image_caption">Image Caption</option>
    </select>

    <button id="searchButton">Search</button>
  </div>
</body>
</html>
